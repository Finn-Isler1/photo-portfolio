---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Contact Page";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="main-max-width container">
    <div class="form-wrapper">
      <h2>Contact</h2>
      <form action="https://formspree.io/f/xvzzoprg" method="POST">
        <input type="text" name="name" placeholder="Name" />
        <input type="email" name="email" placeholder="Your email" />
        <textarea name="message" placeholder="Your message"></textarea>
        <button type="submit">Send</button>
      </form>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    margin: auto;
    margin-top: 4em;
  }

  .form-wrapper {
    background-color: rgb(238, 238, 238);
    max-width: 500px;
    margin: auto;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
  }

  h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 400;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  form input,
  form textarea {
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1rem;
  }

  button {
    border: none;
    outline: 1px solid gray;
    padding: 10px 20px;
    width: 50%;
    margin: auto;
    background-color: inherit;
    font-weight: 400;
    font-size: 1rem;
    border-radius: 20px;
    margin-top: 0.5rem;
  }

  button:hover {
    cursor: pointer;
    background-color: lightgray;
    color: var(--background-color: rgb(250, 250, 250));
    transition: 0.3s ease-in-out;
  }
</style>
